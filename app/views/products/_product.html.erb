<%= turbo_frame_tag product do %>
  <%= tag.div id: dom_id(product) %>
    <%= product.id %>
    <%= link_to product.title, product_path(product), data: { turbo_frame: '_top' } %><br/>
    <%= product.body %>
    <div>
      <%= link_to 'Edit', edit_product_path(product) %>
      <%= link_to 'Delete', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </div>
    <br/>
  </div>
<% end %>