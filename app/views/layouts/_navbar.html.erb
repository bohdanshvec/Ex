<header class="navbar">
  <div class='mx-2'>
    <%= link_to 'Home', root_path %>
  </div>
  <% if user_signed_in? %>
    <div class="navbar__brand">
      <%= current_company.name %>
    </div>
    <div class="navbar__name">
      <%= current_user.name %>
    </div>
    <div class='mx-2'>
    <%= link_to "Sign out",
                  destroy_user_session_path,
                  data: { turbo_method: :delete },
                  class: "btn btn-dark" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn-dark navbar__right" %>
  </div>
  <% end %>
</header>